<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="16dp"
        android:text="汉语"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="English"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/chinese"
        app:layout_constraintStart_toEndOf="@+id/chinese"
        app:layout_constraintTop_toTopOf="@+id/chinese"/>

    <Button
        android:id="@+id/switchActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="切换"
        app:layout_constraintBottom_toBottomOf="@+id/russian"
        app:layout_constraintStart_toEndOf="@+id/russian"
        app:layout_constraintTop_toTopOf="@+id/russian"/>

    <Button
        android:id="@+id/russian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="俄语"
        app:layout_constraintBottom_toBottomOf="@+id/english"
        app:layout_constraintStart_toEndOf="@+id/english"
        app:layout_constraintTop_toTopOf="@+id/english"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/chinese"
        tools:layout_editor_absoluteX="0dp"/>

    <ImageView
        android:id="@+id/show"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"/>



</android.support.constraint.ConstraintLayout>